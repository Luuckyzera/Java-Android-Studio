<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Bthistorico"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:text="Historico "
        app:layout_constraintBottom_toTopOf="@+id/Btfinalizaar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txvresultado" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Valor 1:"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Vlr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Digite o Primeiro Valor"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor 2:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Vlr1"
        app:layout_constraintVertical_bias="0.031" />

    <EditText
        android:id="@+id/Vlr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite o Segundo Valor"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:layout_marginBottom="1dp"
        android:text="RESULTADO"
        app:layout_constraintBottom_toTopOf="@+id/Txvresultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btsubtacao" />

    <TextView
        android:id="@+id/Txvresultado"
        android:layout_width="219dp"
        android:layout_height="50dp"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/Btfinalizaar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.151" />

    <Button
        android:id="@+id/Btfinalizaar"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:text="finalizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bthistorico" />

    <ImageButton
        android:id="@+id/Btsoma"
        android:layout_width="76dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/Btsubtacao"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Vlr2"
        app:srcCompat="@mipmap/somar_pequeno" />

    <ImageButton
        android:id="@+id/Btdivisao"
        android:layout_width="76dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Vlr2"
        app:srcCompat="@mipmap/dividir_pequeno" />

    <ImageButton
        android:id="@+id/Btmulti"
        android:layout_width="71dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/Btdivisao"
        app:layout_constraintTop_toBottomOf="@+id/Vlr2"
        app:srcCompat="@mipmap/multiplicar_pequeno" />

    <ImageButton
        android:id="@+id/Btsubtacao"
        android:layout_width="67dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/Btmulti"
        app:layout_constraintTop_toBottomOf="@+id/Vlr2"
        app:srcCompat="@mipmap/subtrair_pequeno" />

    <Button
        android:id="@+id/Btsomamen"
        android:layout_width="71dp"
        android:layout_height="50dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="11dp"
        android:text="M+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btsoma" />

    <Button
        android:id="@+id/Btsubmen"
        android:layout_width="73dp"
        android:layout_height="50dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="100dp"
        android:text="M-"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btsomamen"
        app:layout_constraintVertical_bias="0.096" />

    <Button
        android:id="@+id/Btrecmen"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:text="MR"
        app:layout_constraintEnd_toStartOf="@+id/Btclearmen"
        app:layout_constraintStart_toEndOf="@+id/Btsomamen"
        app:layout_constraintTop_toBottomOf="@+id/Btmulti" />

    <Button
        android:id="@+id/Btclearmen"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_marginTop="13dp"
        android:text="MC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toEndOf="@+id/Btrecmen"
        app:layout_constraintTop_toBottomOf="@+id/Btdivisao" />

    <Button
        android:id="@+id/Btsubsmen"
        android:layout_width="70dp"
        android:layout_height="54dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="76dp"
        android:text="MS"
        app:layout_constraintBottom_toTopOf="@+id/Textmemory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Btsubmen"
        app:layout_constraintTop_toBottomOf="@+id/Btrecmen"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="78dp"
        android:layout_height="24dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="276dp"
        android:layout_marginBottom="80dp"
        android:text="MEMORIA"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btsubmen" />

    <TextView
        android:id="@+id/Textmemory"
        android:layout_width="203dp"
        android:layout_height="47dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="277dp"
        android:layout_marginBottom="52dp"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>